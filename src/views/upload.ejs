<%- include('./includes/header2.ejs') %>

<header class="bg-primary text-white">
  <div class="container text-center">
    <h1>Upload Questions</h1>
  </div>
</header>

<div class="wrapper">
  <div class="fi le-download">
    <br />
    <br />
    <h2 class="text-center">Please Upload a Question</h2>
    <br />
    <br />

    <form id="formtwo" class="upload-question" enctype="multipart/form-data">
      <p>Department:</p>
      <select id="department" name="department">
        <% for( course of courses ) { %>
        <option value="<%= course.course %>"><%= course.course %></option>
        <% } %>
      </select>
      <br />
      <br />
      <p>Course Code:</p>
      <input
        type="text"
        id="course_code"
        name="course_code"
        placeholder="Course Code"
      />
      <br />
      <br />
      <p>Course Name:</p>
      <input
        type="text"
        id="course_name"
        name="course_name"
        placeholder="Course Name"
      />
      <br />
      <br />
      <p>Session:</p>
      <input
        type="\d{4}/\d{4}"
        id="session"
        name="session"
        placeholder="Session"
      />
      <br />
      <br />
      <p>Level Taken:</p>
      <select id="level" name="level">
        <% for( level of levels ) { %>
        <option value="<%= level.level %>"><%= level.level %></option>
        <% } %>
      </select>
      <br />
      <br />
      <p>Images:</p>
      <input type="file" id="photo" name="image" multiple />
      <br />
      <br />
      <input type="submit" name="submit" id="submit" />
    </form>
    <br />
    <br />
    <br />
  </div>
</div>

<script src="//ajax.googleapis.com/ajax/libs/jquery/1.7.1/jquery.min.js"></script>
<script src="/js/uploadScript.js"></script>

<%- include('./includes/footer.ejs') %>
